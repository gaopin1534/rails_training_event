%h1
  イベント詳細

- if logged_in?
  %span
  - if current_user
    - if current_user.atendees.with_event(@event.id).first
      - if current_user.atendees.with_event(@event.id).first.atend?
        = link_to "Absent", absent_event_path(@event), class: "btn btn-danger"
      - else
        = link_to "Atend", atend_event_path(@event), class: "btn btn-primary"
    - else
      = link_to "Atend", atend_event_path(@event), class: "btn btn-primary"
  = link_to "Edit", edit_event_path
  = link_to "Destroy", event_path, method: :delete


%div.event-info
  %p
    = "タイトル: " + @event.title
  %p
    = "日時: " + @event.hold_at.to_s
  %p
    = "人数: " + @event.atendees.count.to_s + "/" + @event.capacity.to_s
  %p
    = "場所: " + @event.location
  %p
    = "主催者: " + @event.owner
  %p
    = "詳細: " + @event.description
  .clear
%div#attendance
  = "attendance"
  = render partial: "members", locals: {members: @event.atendees.atends}
%div#absence
  = "absence"
  = render partial: "members", locals: {members: @event.atendees.absents}
