%div.container.member-form-container
  = form_for @event do |f|
    %h2
      = link_to "イベント編集", root_path
    = render partial: "error_display", locals: {object: @event}
    .form-group
      = f.label :title, "イベントタイトル", class: "control-label"
      = f.text_field :title, class: "form-control"
    .form-group
      = f.label :hold_at, "開催日時", class: "control-label"
      = f.text_field :hold_at, data: { :date_format => 'YYYY/MM/DD hh:mm' }, :class => 'form-control datetimepicker', placeholder: 'YYYY/MM/DD hh:mm:ss'
    .form-group
      = f.label :capacity, "定員", class: "control-label"
      = f.number_field :capacity, class: "form-control", required: true, min:"0"
    .form-group
      = f.label :location, "会場", class: "control-label"
      = f.text_field :location, class: "form-control"
    .form-group
      = f.label :owner, "開催者", class: "control-label"
      = f.text_field :owner, class: "form-control"
    .form-group
      = f.label :description, "詳細", class: "control-label"
      = f.text_area :description, class: "form-control"
    = f.submit submit_btn, class: "btn btn-primary"
    .clear
